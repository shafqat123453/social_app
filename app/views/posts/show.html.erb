<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<p><strong>Visibility:</strong> <%= @post.visibility.capitalize %></p>
<% if user_signed_in? && current_user == @post.user %>

<%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to "Delete", @post, data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  } %> |

  <%= link_to 'Like', like_post_path(@post), method: :put %>
<%= link_to 'Dislike', dislike_post_path(@post), method: :put %>
<p>Likes: <%= @post.get_likes.size %></p>
<p>Dislikes: <%= @post.get_dislikes.size %></p>


<%end%>
<%= link_to 'Back', posts_path %>

